
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">

    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="UrunAd" required="" maxlength="15" />

    </div>
    <div>
        <label>Kategori Seçiniz</label>
        <input type="text" class="form-control" name="UrunKategori" required="" />

    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="UrunFiyat" />

    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="Marka" placeholder="Buraya Markayı Yazınız..." required="" />

    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="Stok" />

    </div>




    <div style="margin-top:15px;">
        <button style="background-color:teal" class="btn btn-info">Ürün Ekle</button>

    </div>





</form>

